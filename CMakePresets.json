{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "hidden": false,
            "generator": "Visual Studio 17",
            "binaryDir": "${sourceDir}/cmake",
            "cacheVariables": {
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/bin",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-windows-static"
            }
        },
        {
            "name": "default32",
            "hidden": false,
            "generator": "Visual Studio 17",
            "architecture": "Win32",
            "binaryDir": "${sourceDir}/cmake32",
            "cacheVariables": {
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/bin32",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x86-windows-static"
            }
        },
        {
            "name": "clangd",
            "inherits": "default",
            "hidden": false,
            "generator": "Ninja",
            "description": "Clangd configuration for exporting compile commands for MSVC",
            "binaryDir": "${sourceDir}/clangd"
        }
    ],
    "buildPresets": [
        {
            "name": "lib",
            "configurePreset": "default",
            "targets": [
                "lib"
            ]
        },
        {
            "name": "cli",
            "configurePreset": "default",
            "targets": [
                "cli",
                "windows_host"
            ]
        },
        {
            "name": "lib32",
            "configurePreset": "default32",
            "targets": [
                "lib"
            ]
        },
        {
            "name": "cli32",
            "configurePreset": "default32",
            "targets": [
                "cli",
                "windows_host"
            ]
        }
  ]
}
