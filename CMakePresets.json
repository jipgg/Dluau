{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "hidden": false,
            "generator": "Visual Studio 17",
            "binaryDir": "${sourceDir}/cmake-out",
            "cacheVariables": {
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/bin",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "compilation-database",
            "inherits": "default",
            "hidden": false,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/compilation-database"
        }
    ],
    "buildPresets": [
        {
            "name": "build-default",
            "configurePreset": "default",
            "targets": [
                "Lumin.SDK",
                "Lumin.Module.Filesystem",
                "Lumin.Module.Date_Time",
                "Lumin.Module.Console"
            ]
    }
  ]
}
